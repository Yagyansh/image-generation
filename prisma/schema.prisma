datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id                    String   @id
  user_id               String?
  prompt                String
  refs                  Json?
  status                String
  result_s3_key         String?
  result_cloudfront_url String?
  error_message         String?
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt
}
